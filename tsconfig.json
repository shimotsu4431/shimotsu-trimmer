{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "es2015", "es2016", "es2017", "dom"],
    "baseUrl": "./",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "outDir": "dist",
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
